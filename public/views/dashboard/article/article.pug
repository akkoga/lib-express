extends ../../layouts/document
include ../../components/icon
include ../../components/dashboard-category-form

block content
    div.uk-card.uk-card-default
        header.uk-card-header
            div.uk-grid-small.uk-flex-middle(uk-grid)
                div.uk-width-auto
                    a(href="/dashboard/article" uk-tooltip="title: Revenir au gestionnaire d'article")
                        +icon('arrow-left')(class="uk-icon-button")

                div.uk-width-expand
                    h3.uk-catd-title.uk-margin-remove-bottom CrÃ©ation d'un article

        div.uk-card-boby.uk-padding-small
            div(uk-grid)
                div.uk-width-2-3
                    form(method="post")
                        div.uk-margin
                            input.uk-input.uk-form-width-large(type="text" placeholder="Titre de l'article" required)
                        div.uk-margin
                            textarea#article-form.uk-textarea(rows="20" placeholder="Contenue de l'article")
                div.uk-width-1-3
                    div
                        h3 
                            +icon('category')
                            span Labels
                        div
                            ul#categoryList.uk-list
                                if category && category.length > 0
                                    each category in category
                                        li.category
                                            label
                                                input.uk-checkbox(type="checkbox" id=`categoryId-${category.id}`)
                                                | #{category.category}
                                else
                                    li Aucun category
        footer.uk-card-footer
            button.uk-button.uk-button-primary(type="submit") Publier l'article

    script(src="https://cdn.tiny.cloud/1/vgois5exev9fegvbcutd1x5sx5pusqcpya8fuccgys7vurll/tinymce/5/tinymce.min.js" referrerpolicy="origin")
    script(src="/src/js/tinyMCE-init.js")